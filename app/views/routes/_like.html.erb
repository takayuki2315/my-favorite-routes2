
<% if current_user.liked_by?(@route) %>
  <%= link_to 'いいね!', destroy_like_path(@route), class: "like-link", method: :DELETE, remote: true  %> 
    <i class="fa-lg fas fa-heart unlike-btn"></i>
  <%= @route.likes.count %>
<% else %>
  <%= link_to 'いいねする', create_like_path(@route), class: "like-link", method: :POST, remote: true  %> 
    <i class="fa-lg fas fa-heart like-btn"></i>
  <%= @route.likes.count %>
<% end %>
